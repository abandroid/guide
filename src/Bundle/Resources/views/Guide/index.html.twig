{% extends 'EndroidGuideBundle::base.html.twig' %}

{% block body %}

    <h1>Gemist</h1>

    {% for show in shows %}

        <table class="table table-striped table-bordered">
            <tr>
                <td>
                    <strong>{{ show.label }} ({{ show.duration }} ms) {% if "guide" in show|keys %}<a href="{{ show.guide }}" target="_blank" style="color: #000;"><span class="glyphicon glyphicon-link"></span></a>{% endif %}</strong>
                </td>
            </tr>
            <tr>
                <td>

                    {% for result in show.results %}

                        <a href="{{ result.url }}" class="btn btn-{{ result.color }} btn-sm" style="margin: 5px 0px;" target="_blank">{{ result.label }}</a>

                    {% else %}

                        &nbsp; No results

                    {% endfor %}

                </td>
            </tr>
        </table>

    {% endfor %}

{% endblock %}